<% include partials/_header %>

<div class="row">
    <div class="col-md-8 col-md-offset-2 text-center message">
         <h2>REGISTER for a Smaller4You Account</h2>
        <p><em>Registering an account makes it easy to manage your <strong>Smaller4You URLs.</strong></em></p>
    </div>
</div>

<div class="row">
    <div class="col-md-6 col-md-offset-3">

        <form action="/register" method="POST">
           <div class="form-group">
                <label for="email">Email</label>
                    <input placeholder="Email" class="form-control" type="emailInput" id="email" name="email">
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                    <input placeholder="Password" class="form-control" id="passwordInput" type="password" name="password">
            </div>
            <div class="form-group">
                <button class="btn btn-success btn-block" type="submit">Register!</button>
            </div>
        </form>

<% include partials/_footer %>
