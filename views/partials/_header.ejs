<body>

    <div class="container">
        <div class="row">
            <div class="col-md-1">
                <img src="./img/shrink.png" alt="Smaller4You">
            </div>
            <div class="col-md-4">
               <a href="/urls"><h1 class="logo">Smaller<em>4You</em></h1></a>
               <p>Make URLs Smaller, Not Your Patience.</p>
            </div>
            
            <div class="col-md-4 col-md-offset-3">
                <% if(isAuthenticated) { %>
                
                    <form action="/logout" method="POST">
                        <h3>Welcome!</h3><%= user.email %>
                        <button type="submit">Logout</button>
                    </form>
                    
                <% } else { %>
                
                    <h4>Already a member? <a href="/login">login</a></h4>
                    <h4>Not a member and would like to join? <a href="/register">Register</a></h4>
                
                <% } %>
            </div>
        </div>
        <% if(!isAuthenticated) { %>
            <div class="row">
                <div class="col-md-4 col-md-offset-4 text-center sadface">
                    <img src="./img/sad.png">
                    <h3>Want to see your URLs?</h3>
                    <p>Login above!</p>
                </div>
            </div>
        <% } %>
    </div>
