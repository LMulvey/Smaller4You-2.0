<!-- THIS WILL BE THE PAGE TO SUBMIT URLS TO BE SHORTENED -->

<% include partials/_header %>

<% if(isAuthenticated) { %>

    <div class="row">
        <div class="col-md-8 col-md-offset-2 text-center message">
             <h2>Create a NEW URL!</h2>
            <p><em>Simply enter the URL you want to shorten and we'll do the rest.</em></p>
        </div>
    </div>
    
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <form action="/urls" method="POST">
                <div class="form-group">
                    <label for="longURL">Enter a URL</label>
                    <input id="longURL" type="text" name="longURL" class="form-control" placeholder="http://">
                </div>
                 <div class="form-group">
                    <button class="btn btn-success btn-block" type="submit">Submit URL!</button>
                </div>
            </form>
        </div>
    </div>
    <% } else { %>
        <% include partials/_notauth %>
    <% } %>

<% include partials/_footer %>